{
  "list.source.files.args": ["--hidden", "--files"],
  "list.source.files.excludePatterns": ["**/.git/**", "/tmp", ".DS_Store"],
  "languageserver": {
    // see also https://jdhao.github.io/2020/11/29/neovim_cpp_dev_setup/
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "trace.server": "verbose",
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "reatainInMemory": 1,
        // see https://github.com/MaskRay/ccls/issues/191
        "clang": {
          // from clang -v -fsyntax-only -x c++ /dev/null
          "extraArgs": [
            //"-isystem/opt/homebrew/opt/llvm/bin/../include/c++/v1",
            "-isystem/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include/c++/v1",
            "-isystem/opt/homebrew/Cellar/llvm/13.0.1_1/lib/clang/13.0.1/include",
            "-isystem/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include",
            "-isystem/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
          ]
          //From clang -print-resource-dir
          //"resourceDir": "/opt/homebrew/Cellar/llvm/11.1.0/lib/clang/11.1.0"
        }
      }
    }
  },
  // 很卡
  "highlight.document.enable": false,
  "coc.preferences.formatOnType": true,
  "suggest.enablePreselect": true,
  "suggest.noselect": false,
  "suggest.autoTrigger": "none",
  "suggest.maxCompleteItemCount": 20,
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },
  // -----------------diagnostic
  "diagnostic.displayByAle": false,
  "diagnostic.enable": true,
  "diagnostic.level": "information",
  "diagnostic.errorSign": "✘",
  "diagnostic.warningSign": "∆",
  "diagnostic.infoSign": "◉",
  "diagnostic.hintSign": "▶︎",

  "python.pythonPath": "/opt/homebrew/bin/python3",
  "python.analysis.useLibraryCodeForTypes": false,
  "python.linting.enabled": false,
  "python.linting.flake8Enabled": false,
  "python.formatting.provider": "yapf",
  // "python.linting.flake8CategorySeverity.E": "Warning",
  "coc.preferences.formatOnSaveFiletypes": [
    //"c",
    //"cpp",
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "javascriptreact",
    "typescript.tsx",
    "python"
  ],
  "explorer.icon.enableNerdfont": true,
  "explorer.openAction.strategy": "select",
  "snippets.autoTrigger": false,
  "json.schemas": [
    {
      "fileMatch": ["plot.json"],
      "url": "file:Users/liyulong/.vim/schema/plotschema.json"
    }
  ]
}
